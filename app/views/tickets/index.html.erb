<%= render 'shared/heading', title_text: 'Tickets' %>

<% if @tickets != nil %>
  <%= render 'ticket_filter' %>
<% end %>

<div class="content is-large"> 
  <% if @tickets == nil %>
    <p>There are currently no tickets in the system.</p>
  <% elsif @tickets.empty? %>
    <p>No tickets matching the filter criteria.</p>
  <% else %>
    <%= render 'shared/tickets_table', tickets: @tickets %>
  <% end %>

  <% if !@projects.empty? %>
    <%= render 'shared/new_resource_button',
      path: new_ticket_path,
    word: 'Ticket'
    %>
  <% else %>
    <p class="is-italic">
      <small>Create a project in order to create tickets.</small>
    </p>
  <% end %>
</div>

